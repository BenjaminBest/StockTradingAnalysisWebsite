@using StockTradingAnalysis.Web
@model StockTradingAnalysis.Web.Models.StockViewModel

@{
    ViewBag.Title = Resources.ViewTextStockTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-dismissible alert-success">
                @Resources.ViewTextStock
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Wkn)
                @Html.EditorFor(model => model.Wkn, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
            </div>

            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(model => model.Type)
                    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LongShort)
                    @Html.EditorFor(model => model.LongShort, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.OriginalVersion)

                <input type="submit" value="@Resources.ViewTextDelete" class="btn btn-danger" />
                @Html.ActionLink(Resources.ViewTextBack, "Index", null, new { @class = "btn btn-info" })
            }
        </div>
    </div>
</div>