@model StockTradingAnalysis.Web.Models.FeedbackViewModel

@{
    ViewBag.Title = Resources.ViewTextFeedbackTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/validation")

<script type="text/javascript">
    $(function () { $('#Name').autocomplete({ source: '@Url.Action("GetFeedbackName")', minLength: 1 }); });
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <p>
        <input type="submit" value="@Resources.ViewTextAdd" class="btn btn-success" />
    </p>
}

<div>
    @Html.ActionLink(Resources.ViewTextBack, "Index", null, new { @class= "btn btn-info" })
</div>
