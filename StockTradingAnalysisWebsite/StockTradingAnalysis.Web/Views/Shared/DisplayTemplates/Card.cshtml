@using StockTradingAnalysis.Web.Common.Formatting
@model StockTradingAnalysis.Web.Models.CardViewModel

@if (Model.FilledBackground)
{
    <div class="card text-white bg-@Model.Style.CssClass() mb-2 mt-2 ml-2" style="width: 18rem;">
        <div class="card-header">@Model.Header</div>
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text">@Model.Content</p>
        </div>
    </div>
}
else
{
    <div class="card border-@Model.Style.CssClass() mb-2 mt-2 ml-2" style="width: 18rem;">
        <div class="card-header">@Model.Header</div>
        <div class="card-body">
            <h4 class="card-title text-@Model.Style.CssClass()">@Model.Title</h4>
            <p class="card-text">@Model.Content</p>
        </div>
    </div>
}