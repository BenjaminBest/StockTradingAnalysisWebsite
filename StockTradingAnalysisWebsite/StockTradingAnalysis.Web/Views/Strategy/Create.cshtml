@model StockTradingAnalysis.Web.Models.StrategyViewModel

@{
    ViewBag.Title = Resources.ViewTextStrategyTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/validation")

<script type="text/javascript">
    $(function () { $('#Name').autocomplete({ source: '@Url.Action("GetStrategyName")', minLength: 1 }); });
</script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="display-left">
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="display-left" style="padding-left:15px">
        @Html.EditorFor(model => model.Image)
    </div>
    <div style="clear: both" />

    <p>
        <input type="submit" value="@Resources.ViewTextAdd" />
    </p>
}

<div>
    @Html.ActionLink(Resources.ViewTextBack, "Index")
</div>
