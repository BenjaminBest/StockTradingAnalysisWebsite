@using StockTradingAnalysis.Web
@using StockTradingAnalysis.Web.Models
@model IEnumerable<PerformanceViewModel>
@{
    ViewBag.Title = Resources.ViewTextPerformanceTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Model.Any())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-danger">
                    <h4 class="alert-heading">@Resources.ViewTextPerformanceNotAvailableTitle</h4>

                    <p>@Resources.ViewTextPerformanceNotAvailable</p>
                </div>
            </div>
        </div>
    </div>
}


@foreach (var item in Model)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4 class="alert-heading">SOME TITLE???</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.LabelFor(modelItem => item.TimeRange.FirstOrDefault())</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        <td>@Html.DisplayFor(modelItem => item.TimeRange)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
