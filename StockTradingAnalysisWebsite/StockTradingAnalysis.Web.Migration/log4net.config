<log4net>
  <appender name="ColoredConsoleAppender"
    type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="DEBUG" />
      <foreColor value="White, HighIntensity" />
      <backColor value="Blue" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <foreColor value="White, HighIntensity" />
      <backColor value="Green" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <foreColor value="Yellow, HighIntensity" />
      <backColor value="Purple" />
    </mapping>
    <mapping>
      <level value="ERROR" />
      <foreColor value="Yellow, HighIntensity" />
      <backColor value="Red" />
    </mapping>
    <mapping>
      <level value="FATAL" />
      <foreColor value="White, HighIntensity" />
      <backColor value="Red" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%5level [%class:%line] %message%newline" />
    </layout>
  </appender>

  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="..\..\..\Logs\" />
    <rollingStyle value="Date" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <datePattern value="yyyy-MM-dd'-Migration.txt'" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss,fff} %level [%class:%line] %message%newline" />
    </layout>
  </appender>

  <!--<appender name="Logstash" type="log4net.Appender.UdpAppender">
    <remoteAddress value="127.0.0.1" />
    <remotePort value="5000" />
     <encoding value="utf-8" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss,fff} %level [%class:%line] %message%newline" />
    </layout>
  </appender>-->

  <root>
    <level value="All" />
    <appender-ref ref="ColoredConsoleAppender" />
    <appender-ref ref="RollingFile" />
    <!--<appender-ref ref="Logstash" />-->
  </root>
</log4net>